<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <!-- Card Container (Glass Effect) -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="10dp">

        <!-- Logo Image - using original ID -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"/>

        <!-- Title - from original layout -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="AI Chef"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle - from original layout -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Your Personal Cooking Assistant"
            android:textSize="16sp" />

        <!-- Email Input - original ID -->
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email or Username"
            android:drawableEnd="@drawable/ic_email"
            android:background="@null"
            android:textColorHint="@android:color/black"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <!-- Password Input - original ID -->
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableEnd="@drawable/ic_lock"
            android:background="@null"
            android:textColorHint="@android:color/black"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <!-- Login Button - original ID -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_button"
            android:stateListAnimator="@null"
            android:layout_marginTop="20dp"/>

        <!-- Progress Bar - from original layout -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Register Link - original ID -->
        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Register here"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/forgot_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>