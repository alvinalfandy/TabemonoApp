<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corner radius untuk tampilan rounded -->
    <corners android:radius="20dp"/>

    <!-- Warna putih transparan untuk efek glass -->
    <solid android:color="#80FFFFFF"/> <!-- #80FFFFFF = 50% transparan -->

    <!-- Garis pinggir halus untuk efek elegan -->
    <stroke android:width="1dp" android:color="#40FFFFFF"/> <!-- 25% transparan -->
</shape>